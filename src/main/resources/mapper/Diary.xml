<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.exampl.traveler.mapper.DiaryMapper">

    <select id="show" parameterType="String" resultType="com.exampl.traveler.vo.DiaryVO">
        SELECT * FROM diary WHERE userID = #{userId};
    </select>

    <insert id="insertDiary" parameterType="com.exampl.traveler.vo.DiaryVO">
        INSERT INTO DIARY (userID, GODAY, BACKDAY, DIARYTITLE, DIARYTEXT)
        VALUES (#{userId}, #{godDay}, #{backDay}, #{diaryTitle}, #{diaryText});
    </insert>

</mapper>
