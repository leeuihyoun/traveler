<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.exampl.traveler.mapper.HotelMapper">
    <select id="getAllHotels" resultType="com.exampl.traveler.vo.HotelVO">
        SELECT * FROM hotel
    </select>

    <select id="getHotelsByPlace" parameterType="String" resultType="com.exampl.traveler.vo.HotelVO">
        SELECT * FROM hotel WHERE hotelplace = #{place}
    </select>

    <select id="getHotelById" parameterType="String" resultType="com.exampl.traveler.vo.HotelVO">
        SELECT * FROM hotel WHERE hotelNO = #{hotelNO}
    </select>
</mapper>
